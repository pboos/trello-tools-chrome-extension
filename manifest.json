{
  "manifest_version": 2,

  "name": "Trello - Tools",
  "description": "",
  "version": "1.0",
  "icons": { "128": "icon.png" },

  "background": { "scripts": ["background.js"] },

  "content_scripts": [
    {
      "matches": ["https://trello.com/b/*"],
      "css": ["trello-tools.css"],
      "js": ["trello-tools.js"]
    }
  ],

  "permissions": [
    "tabs",
    "https://trello.com/b/*"
  ],

  "page_action": {
      "default_name": "Tools",
      "default_icon": "icon.png",
      "default_popup": "trello-tools.html"
  }
}